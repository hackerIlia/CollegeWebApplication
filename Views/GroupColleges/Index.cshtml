@model IEnumerable<CollegeWebApplication.Models.GroupCollege>

@{
    ViewData["Title"] = "Index";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-... (the actual integrity hash)" crossorigin="anonymous" />

<h1>Groups</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTeahcerNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTeahcerNavigation.SurnameTeacher)
                @Html.DisplayFor(modelItem => item.IdTeahcerNavigation.NameTeahcer)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdGroup"><i class="fas fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdGroup"><i class="fas fa-info-circle"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdGroup"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
