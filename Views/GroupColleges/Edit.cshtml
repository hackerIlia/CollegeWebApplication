@model CollegeWebApplication.Models.GroupCollege

@{
    ViewData["Title"] = "Edit";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<h1>Edit</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGroup" />
            <div class="form-group">
                <label asp-for="NameGroup" class="control-label"></label>
                <input asp-for="NameGroup" class="form-control" />
                <span asp-validation-for="NameGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTeahcer" class="control-label">Teacher</label>
                <select asp-for="IdTeahcer" class="form-control" asp-items="ViewBag.IdTeahcer"></select>
                <span asp-validation-for="IdTeahcer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
