@model CollegeWebApplication.Models.GroupCollege

@{
    ViewData["Title"] = "Create";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<h1>Create</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}

<h4>GroupCollege</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameGroup" class="control-label"></label>
                <input asp-for="NameGroup" class="form-control" />
                <span asp-validation-for="NameGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTeahcer" class="control-label">Teacher</label>
                <select asp-for="IdTeahcer" class="form-control" asp-items="ViewBag.IdTeahcer"></select>
                <span asp-validation-for="IdTeahcer" class="text-danger" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    var teacherList = ViewBag.TeacherList as SelectList;
    if (teacherList != null)
    {
        foreach (var item in teacherList)
        {
            <div>@item.Text - @item.Value</div>
        }
    }
}
